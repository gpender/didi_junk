                <StackPanel Orientation="Vertical">
                    <ToggleButton x:Name="StartButton" Command="{Binding ScopeCommand}" CommandParameter="{x:Static vm:ScopeCommandName.START}" Padding="4" Content="1"/>
                    <ToggleButton x:Name="PauseButton" Command="{Binding ScopeCommand}" CommandParameter="{x:Static vm:ScopeCommandName.PAUSE}" Padding="7" Content="P"/>
                    <ToggleButton x:Name="ResetButton" Command="{Binding ScopeCommand}" CommandParameter="{x:Static vm:ScopeCommandName.STOP}" Padding="7" Content="0"/>
